{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "moduleResolution": "Node",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
  },
  "include": [
    "src/**/*"
  ]
}
